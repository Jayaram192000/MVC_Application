@model List<Category>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h1>Category</h1>
        </div>
        <div class="col-6 text-end pb-2">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-file-earmark-plus"></i>  Create category
            </a>
        </div>
    </div>


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display order
            </th>
            <th>Edit/Delete</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var obj in Model.OrderBy(u => u.fldDisplayOrder))
        {
            <tr>
                <td>@obj.fldName</td>
                <td>@obj.fldDisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.fldName" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>  Edit
                        </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.fldName"  class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i>  Delete
                            </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>